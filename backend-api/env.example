# ===========================================
# S.D.P.I. Backend API - Environment Variables
# ===========================================
# Copy this file to .env and update values

# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
# [MODULE 2: Data persistence layer]
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sdpi_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=sdpi_db

# JWT Authentication
# [MODULE 2: Security - Use strong secret in production]
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=24h

# ML Service Connection
# [MODULE 3: Distributed service communication]
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=30000

# Logging
LOG_LEVEL=debug

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:4200

